<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pin_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_small" >

    <TextView
        android:id="@+id/textView_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner: "
        android:textSize="16dp"
        android:layout_margin="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_owner_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:layout_margin="2dp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView_owner"
        app:layout_constraintStart_toEndOf="@id/textView_owner" />

    <TextView
        android:id="@+id/textView_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textSize="16dp"
        android:layout_margin="2dp"
        app:layout_constraintTop_toBottomOf="@id/textView_owner"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_address_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:maxLines="2"
        android:singleLine="false"
        android:layout_margin="2dp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView_address"
        app:layout_constraintStart_toEndOf="@id/textView_address" />

    <TextView
        android:id="@+id/textView_expiretime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available until: "
        android:textSize="16dp"
        android:layout_margin="2dp"
        app:layout_constraintTop_toBottomOf="@id/textView_address_data"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_expiretime_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:layout_margin="2dp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView_expiretime"
        app:layout_constraintStart_toEndOf="@id/textView_expiretime" />

    <ImageView
        android:id="@+id/imageView_parking"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_expiretime"
        app:srcCompat="@drawable/ic_menu_gallery" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/TakeParkingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="auto"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/button_pin_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:background="?attr/selectableItemBackgroundBorderless"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>